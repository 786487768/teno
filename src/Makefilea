# Definitions required in all program directories to compile and link
# C programs using gcc.

ROOT = ..
CC=gcc
COMPILE.c=$(CC) $(CFLAGS) $(CPPFLAGS) -c
LINK.c=$(CC) $(CFLAGS) $(CPPFLAGS) $(LDFLAGS)
LDFLAGS=
LDDIR=-L$(ROOT)/lib
LDLIBS=$(LDDIR) -lrdkafka $(EXTRALIBS)
CFLAGS=-I$(ROOT)/include/librdkafka -Wall -DLINUX -D_GNU_SOURCE $(EXTRA)
RANLIB=echo
AR=ar
AWK=awk
LIBKAFKA=$(ROOT)/lib/librdkafka.a

# Common temp files to delete from each directory.
TEMPFILES=core core.* *.o temp.* *.out


PROGS =	rdkafka_example

all:	$(PROGS) 

%:	%.c $(LIBKAFKA)
	$(CC) $(CFLAGS) $@.c -o $@ $(LDFLAGS) $(LDLIBS) -lz -lpthread -lrt


clean:
	rm -f $(PROGS) $(MOREPROGS) $(TEMPFILES) *.o